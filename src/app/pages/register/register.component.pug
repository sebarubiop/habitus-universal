.row.vh-100.view
  .col-md-6.px-0.welcome-section
    .d-flex.align-items-center.justify-content-end.h-100
      .d-flex.flex-column.welcome-container
        .welcome-text
          h1 Welcome to Habitus.Network
          ul.pl-0(style="list-style-type:none;")
            li Personalised medicine
            li Healthcare
            li Security
            li Sustainability
            li Resilience
            li Data
            li Privacy
        .welcome-bottom
    .d-flex.welcome-footer.mb-4.mr-3
      app-footer
  .col-md-6.px-0.register-section
    .vh-100.d-flex.align-items-center.register-mask
      .d-flex.flex-column.flex-grow-1
        .register-label.mb-3 Register an account
        form.form-signin([formGroup]="form", (submit)="onRegisterSubmit()")
          .form-label-group
            input#inputName.form-control(placeholder="Name", required="", formControlName="nameCtrl")
            label(for="inputName") Name
          .form-label-group
            input#inputEmail.form-control(type="email", placeholder="Email address", required="", formControlName="emailCtrl")
            label(for="inputEmail") Email address
          .form-label-group
            input#inputPassword.form-control(type="password", placeholder="Password", required="", formControlName="passwordCtrl")
            label(for="inputPassword") Password
          .form-label-group
            input#inputConfirmPass.form-control(type="password", placeholder="Confirm Password", required="", formControlName="confirmPassCtrl")
            label(for="inputConfirmPass") Confirm Password
        
          .mt-5.mb-3.text-muted.d-flex.justify-content-between.align-items-center.register-control
            small Agree to 
              a(routerLink="/"): u Terms & Conditions
            button.btn.btn-danger(type="submit") Register
    .d-flex.register-footer.mb-4.ml-4
      .terms-text Already have an account? 
        a(routerLink="/login"): u Login
    
