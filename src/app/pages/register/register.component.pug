form.form-signin([formGroup]="form", (submit)="onRegisterSubmit()")
  .text-center.mb-4
    img.mb-4(src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg", alt="", width="72", height="72")
    h1.h3.mb-3.font-weight-normal Floating labels
    p
      | Build form controls with floating labels via the 
      code :placeholder-shown
      |  pseudo-element. 
      a(href="https://caniuse.com/#feat=css-placeholder-shown") Works in latest Chrome, Safari, and Firefox.
  .form-label-group
    input#inputName.form-control(placeholder="Name", required="", formControlName="nameCtrl")
    label(for="inputName") Name
  .form-label-group
    input#inputEmail.form-control(type="email", placeholder="Email address", required="", formControlName="emailCtrl")
    label(for="inputEmail") Email address
  .form-label-group
    input#inputPassword.form-control(type="password", placeholder="Password", required="", formControlName="passwordCtrl")
    label(for="inputPassword") Password
  .form-label-group
    input#inputConfirmPass.form-control(type="password", placeholder="Confirm Password", required="", formControlName="confirmPassCtrl")
    label(for="inputConfirmPass") Confirm Password
  .checkbox.mb-3
    label
      input(type="checkbox", value="remember-me")
      |  Remember me
  button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign up
  .mt-5.mb-3.text-muted.text-center.d-flex.justify-content-between
    button.btn.btn-outline-default(routerLink='/') Terms and Conditions
    button.btn.btn-outline-primary(routerLink='/login') Sign in
    
